<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>otm-benchmark</artifactId>
        <groupId>cz.cvut.kbss.benchmark</groupId>
        <version>0.0.5</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>komma-benchmark</artifactId>

    <properties>
        <net.enilink.komma.version>1.3.3-SNAPSHOT</net.enilink.komma.version>
        <org.eclipse.rdf4j.version>2.2.4</org.eclipse.rdf4j.version>
        <com.google.guice.version>4.1.0</com.google.guice.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>cz.cvut.kbss.benchmark</groupId>
            <artifactId>core</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Komma -->
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.komma.core</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.composition</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.composition.cache</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.composition.properties</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.composition.properties.komma</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.komma.rdf4j</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.komma.em</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.komma.dm</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.komma.literals</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.komma.common</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.commons.iterator</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.vocab.komma</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.vocab.rdfs</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>
        <dependency>
            <groupId>net.enilink.komma</groupId>
            <artifactId>net.enilink.komma.parser</artifactId>
            <version>${net.enilink.komma.version}</version>
        </dependency>

        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm</artifactId>
            <version>6.0</version>
        </dependency>
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-debug-all</artifactId>
            <version>6.0_BETA</version>
        </dependency>

        <!-- Guice -->
        <dependency>
            <groupId>com.google.inject</groupId>
            <artifactId>guice</artifactId>
            <version>${com.google.guice.version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.inject.extensions</groupId>
            <artifactId>guice-multibindings</artifactId>
            <version>${com.google.guice.version}</version>
        </dependency>

        <!-- RDF4J -->
        <dependency>
            <groupId>org.eclipse.rdf4j</groupId>
            <artifactId>rdf4j-repository-api</artifactId>
            <version>${org.eclipse.rdf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.rdf4j</groupId>
            <artifactId>rdf4j-repository-http</artifactId>
            <version>${org.eclipse.rdf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.rdf4j</groupId>
            <artifactId>rdf4j-repository-sail</artifactId>
            <version>${org.eclipse.rdf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.rdf4j</groupId>
            <artifactId>rdf4j-sail-memory</artifactId>
            <version>${org.eclipse.rdf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.rdf4j</groupId>
            <artifactId>rdf4j-rio-binary</artifactId>
            <version>${org.eclipse.rdf4j.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <finalName>komma-benchmark</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>cz.cvut.kbss.benchmark.komma.KommaBenchmark</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>